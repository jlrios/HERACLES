              a(href="#")
                i(class="material-icons")
                  | settings
                span(data-i18n="userinfo.settings") Configuración
            li(class="divider-horizontal")
            li
              a(href="#")
                i(class="material-icons")
                  | lock
                span(data-i18n="userinfo.lock") Bloquear
            li(class="divider-horizontal")
            li
              a(href="#")
                i(class="material-icons") 
                  | exit_to_app
                span(data-i18n="userinfo.logout") Cerrar sesión
    
    nav(id="sidebar")
      ul
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") dashboard
            span(class="menu-item-name" data-i18n="nav.dashboard") Dashboard
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") extension
            span(class="menu-item-name" data-i18n="nav.components.components") Catálogos
          ul
            li
              a(href="#")
                span(data-i18n="nav.components.accordions") Usuarios
