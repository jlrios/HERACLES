aside(id="left-content" data-toggle="open" data-default="open" data-size="")
  header(class="header-container")
    div(class="header-wrapper")
      div(id="header-brand")
        div(class="logo padding-left-2")
          span(class="logo-image") H
          span(class="logo-text") Hércules
  
  div(id="sidebar-wrapper")
    div(id="userbox")
      div(id="useravatar")
        div(class="avatar-thumbnail")
          img(src="/images/avatar/avatar_square_blue.png" class="img-circle")

      div(id="userinfo")
        div(class="btn-group")
          button(type="button" class="btn btn-default-bright btn-flat dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") 
            | #{user.local.nombre} 
            | #{user.local.primerApellido}
            i(class="material-icons") arrow_drop_down
          ul(class="dropdown-menu")
            li
              a(href="#")
                i(class="material-icons") 
                  | person
                span(data-i18n="userinfo.profile") Perfil
            li
              a(href="#")
                i(class="material-icons")
                  | settings
                span(data-i18n="userinfo.settings") Configuración
            li(class="divider-horizontal")
            li
              a(href="#")
                i(class="material-icons")
                  | lock
                span(data-i18n="userinfo.lock") Bloquear
            li(class="divider-horizontal")
            li
              a(href="/logout")
                i(class="material-icons") 
                  | exit_to_app
                span(data-i18n="userinfo.logout") Cerrar sesión
    
    nav(id="sidebar")
      ul
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") dashboard
            span(class="menu-item-name") Dashboard
        li(class="nav-main-heading")
          span(class="sidebar-mini-hide") Cuentas de usuarios
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") account_circle
            span(class="menu-item-name") Usuarios y perfiles
          ul
            li
              a(href="#")
                | Usuarios
            li
              a(href="#")
                | Perfiles
        li(class="nav-main-heading")
          span(class="sidebar-mini-hide") Catalógos
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") extension
            span(class="menu-item-name") Personas
          ul
            li
              a(href="#")
                | Empresas
            li
              a(href="#")
                | Personal
            li
              a(href="#")
                | Contactos
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") volume_up
            span(class="menu-item-name") Equipo
          ul
            li
              a(href="#")
                | Clasificaciones

        li(class="nav-main-heading")
          span(class="sidebar-mini-hide") Eventos
        li
          a(href="#")
            span(class="menu-item-ico")
              i(class="material-icons") event
            span(class="menu-item-name") Calendario
          ul
            li
              a(href="#")
                | Eventos por mes
    
include top-bar.jade
