-var usersJSON = users

div(class="row")
  div(class="col-md-12 col-sm-12 col-xs-12")
    div(class="x_panel")
      div(class="x_title")
        h2 Lista 
          small Usuarios
        ul(class="nav navbar-right panel_toolbox")
          li
            a(class="collapse-link")
              i(class="fa fa-chevron-up")
              
        div(class="clearfix")
        
      div(class="x_content")
      
        a(href="/main/users/blank" class="btn btn-primary")
          i(class="fa fa-user")
          |  Agregar usuario
        
        table(id="datatable-butons" class="table table-striped table-bordered")
          thead
            tr
              th Nombre
              th Primer apellido
              th Segundo apellido
              th Activo
              th Correo electrónico
              th Administrador
              th Acciones
          tbody
          -each usr in usersJSON
            tr
              td #{usr.local.nombre}
              td #{usr.local.primerApellido}
              td #{usr.local.segundoApellido}
              td(style="text-align: center;") 
                -var userIsActive = (usr.local.activo === 1 ? 1 : 0)
                
                if userIsActive == 1
                  input(type="checkbox" class="js-switch" checked disabled)
                else
                  input(type="checkbox" class="js-switch" disabled)
                
              td #{usr.local.correoElectronico}
              td(style="text-align: center;")
                -var userIsAdmin = (usr.local.perfil === 1 ? 1 : 0)
                
                if userIsAdmin == 1
                  input(type="checkbox" class="js-switch" checked disabled)
                else
                  input(type="checkbox" class="js-switch" disabled)
                  
              td(align="center")
                div(class="btn-group")
                  button(type="button" class="btn btn-default") Acción
                  button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false")
                    span(class="caret")
                    span(class="sr-only") Toggle Dropdown
                  ul(class="dropdown-menu" role="menu")
                    li
                      a(href="#") Eliminar
                    li
                      a(href="#") Editar
                    li(class="divider")
                    li
                      a(href="#") Asignar perfil
          
